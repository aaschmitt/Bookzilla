<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F39FB"
        tools:context=".CreateNewUserProfileActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/nameTextInput" android:layout_marginTop="68dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/createNewUserTextView" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/nameTextView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/usernameTextInput"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextInput" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/usernameTextView" android:inputType="textPersonName"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/currentUserTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:text="@string/TEMP_createNewUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/createNewUserTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/currentUserTextView" android:textSize="24sp"/>
    <Button
            android:text="@string/TEMP_createNewUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/createNewUserButton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameTextInput" android:onClick="onCreateNewUserProfileClick"/>
    <TextView
            android:text="@string/TEMP_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView" app:layout_constraintEnd_toStartOf="@+id/nameTextInput"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/createNewUserTextView" tools:text="@string/TEMP_name"
            android:textSize="18sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.711"/>
    <TextView
            android:text="@string/TEMP_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameTextView" app:layout_constraintEnd_toStartOf="@+id/usernameTextInput"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" tools:text="@string/TEMP_username"
            android:textSize="18sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.816"/>
</androidx.constraintlayout.widget.ConstraintLayout>