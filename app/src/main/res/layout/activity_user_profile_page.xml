<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F39FB"
        tools:context=".UserProfilePageActivity">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/currentUserTextView"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/changeUserButton"
            app:layout_constraintStart_toStartOf="@+id/listView" android:layout_marginLeft="112dp"
            android:layout_marginStart="112dp"/>
    <Button
            android:text="@string/TEMP_changeUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeUserButton" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="OnChangeCurrentUserButtonClick"/>
    <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>